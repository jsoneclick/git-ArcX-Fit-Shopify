        "label": "Header Color",
        "default": "#5252FF"
      },
      {
        "type": "image_picker",
        "id": "main-image",
        "label": "Main Image"
      },
      {
        "type": "richtext",
        "label": "Header",
        "id": "header"
      },
      {
        "type": "richtext",
        "label": "Body Text",
        "id": "prose-text"
      },
      {
        "type": "color",
        "id": "prose_color",
        "label": "Text Color",
        "default": "#ffffff"
      }
    ],
    "blocks": [
      {
        "type": "tab",
        "name": "Line",
        "settings": [
          {
            "type": "text",
            "label": "Line Header",
            "id": "line-header",
            "default": "line header"
          },
          {
            "type": "text",
            "label": "Line Text",
            "id": "line-text",
            "default": "line text"
          },
          {
        "type": "html",
        "id": "line-svg",
        "label": "Line Svg"
      }
        ]
    }
  ],
    "presets": [
      {
        "name": "Product Lines"
      }
    ]
  }
{% endschema %}